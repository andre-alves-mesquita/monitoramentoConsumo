<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content-header">
  
    </div>

    <div class="content">
        <div class="content-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h4 class="m-0 ms-3"><strong><i class="fas fa-user"></i></span>   Adicionar Usuário</strong></h4>
                        </div>
                        <div class="card-body">
                     
                            <div class="row">
                                <div class="col-12">
                                   
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <form action="/usuarios" method="post">                                
<div class="row">

    <div class="col-4">
        <div class="input mb-3">
            <span class="input-text" id="basic-addon1">Login</span>
            <input type="text" class="form-control" placeholder="login (sem espaço)" aria-label="Username" aria-describedby="basic-addon1" name="login" required>
          </div>
    </div>
    <div class="col-4">
        <div class="input mb-3">
            <span class="input-text" id="basic-addon1">E-mail</span>
            <input type="email" class="form-control" placeholder="exemplo@exemplo.com.br" aria-label="Username" aria-describedby="basic-addon1" name="email" required>
          </div>
    </div>
    <div class="col-2">
        
            <div class="input mb-3">
                <span class="input-text" id="basic-addon1">Nova Senha</span>
                <input type="password" class="form-control" placeholder="Senha" aria-label="Username" aria-describedby="basic-addon1" name="senha" required>
              </div>
        
        
          
        </div>
        <div class="col-2">
        
            <div class="input mb-3">
                <span class="input-text" id="basic-addon1">Confirmar Nova Senha</span>
                <input type="password" class="form-control" placeholder="Senha" aria-label="Username" aria-describedby="basic-addon1" name="confSenha" required>
              </div>
        
        
          
        </div>
        

    </div>
    <div class="row mb-3" id="erro">
      
    </div>
    <div class="">
        <button type="submit" class="btn btn-success mr-2">Adicionar</button>
        
    </div>
    
</div>
</form>   
                                           
                                              
                                            
                                        </div>
                                                    
                                        <!-- /.card-body -->
                            </div>
                        </div> 
                    </div>
                </div>
            </div>




            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h4 class="m-0 ms-3"><strong><i class="fas fa-user"></i></span>   Listagem de usuários</strong></h4>
                        </div>
                        <div class="card-body">
                     
                            <div class="row">
                                <div class="col-12">
                                   
                                        <!-- /.card-header -->
                                        <div class="card-body">
 
                                            <table id="example1" class="table table-bordered table-hover">
                                                <thead class="bg-info">
                                                    <tr class="text-center">

                                                        <th>Id</th>
                                                        <th>Login</th>
                                                        <th>Email</th>
                                                        <th>Ações</th>
                                                     
                                                    </tr>
                                                </thead>
                                                <tbody id="bodyTable">
                                                <% if(usuarios){ %>
                                                    <% for(var i=0; i < usuarios.length; i++) { %>
                                                <tr class="text-center">
                                                    <td> <%= usuarios[i].id %></td>
                                                    <td><%= usuarios[i].login %></td>
                                                    <td><%= usuarios[i].email %></td>
                                                    <td>
                                                      <a href="perfil/edit/<%= usuarios[i].id %>"><button type="button" class="btn btn-sm btn-success m-2"><i class="fas fa-edit"></i> </button> </a>
                                                      <a href="/usuarios-excluir/<%= usuarios[i].id %>"><button type="button" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> </button>   </a>
                                                        
                                                    </td>
                                                </tr>
                                                    <% } %>
                                                <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.card-body -->
                            </div>
                        </div>   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  
</div>
<script>
    let vazio = "<%= vazio %>";
    let senhasDif = "<%= senhasDif %>";
    let usuario = "<%= usuario %>";
    let resposta = "Usuário criado com sucesso";

    $("#erro").empty();

    if (vazio == 'true') {
        
      $("#erro").append(
        `<div class="col-12 text-center bg-danger rounded"><span>Campo vazio</span></div>`
      );
    } else if (senhasDif == 'true') {
      $("#erro").append(
        `<div class="col-12 text-center bg-danger rounded"><span>Senha diferente</span></div>`
      );
    } else if (usuario == 'true') {
        $("#erro").append(
        `<div class="col-12 text-center bg-success rounded"><span>Usuário adicionado com sucesso</span></div>`
      );
    }

   

</script>




